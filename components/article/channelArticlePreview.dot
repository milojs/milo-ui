<div ml-bind="CIPageItem:newPageItem">
    <div class="article article-small">
        <textarea ml-bind="PIHeader:header">{{= it.title }}</textarea>
        <div class="articletext">
            <a href="#">
                <img ml-bind="[data]:preview" src="{{= it.previewImg }}">
            </a>
            <textarea ml-bind="PIText:description">{{= it.previewText }}</textarea>
        </div>
        <div class="article-icon-links-container">
            <ul class="article-icon-links refresh cleared">
                <li class="first">
                    <a class="comments-link" href="#">
                        <span class="icon"></span>
                        <span class="linktext">
                            <span class="readerCommentNo bold">(0)</span> comments
                        </span>
                    </a>
                </li>
                <li>
                    <a class="videos-link" href="#">
                        <span class="icon"></span>
                        <span class="linktext">
                            <span class="bold">1</span> video
                        </span>
                    </a>
                </li>
                <li class="gr3ox">
                    <a class="js-sl share-link" href="#">
                        <span class="icon"></span>
                        <span class="linktext">
                            <span class="bold">(0)</span> shares
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
